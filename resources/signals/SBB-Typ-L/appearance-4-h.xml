  <aspecttable>SBB</aspecttable>

  <name>Hauptsignal 4-Flammig Halt-FB1-FB2-FB3</name>
  
  <description>Four light main signal. This uses a single head to control the aspects. This signal can show Halt, FB1, FB2 and FB3</description>
  
  <appearances>

    <appearance>
      <aspectname>FB1</aspectname>
      <show>green</show>
      <imagelink type="large">preference:resources/icons/CH-Hauptsignal_4_FB1.png</imagelink>      
      <imagelink type="aspects">preference:resources/icons/CH-Hauptsignal_4_FB1.png</imagelink>
    </appearance>
    
    <appearance>
      <aspectname>FB2</aspectname>
      <show>green</show>
      <show>yellow</show>      
      <imagelink type="large">preference:resources/icons/CH-Hauptsignal_4_FB2.png</imagelink>      
      <imagelink type="aspects">preference:resources/icons/CH-Hauptsignal_4_FB2.png</imagelink>
    </appearance>    

    <appearance>
      <aspectname>FB3</aspectname>
      <show>green</show>
      <show>green</show>      
      <imagelink type="large">preference:resources/icons/CH-Hauptsignal_4_FB3.png</imagelink>      
      <imagelink type="aspects">preference:resources/icons/CH-Hauptsignal_4_FB3.png</imagelink>
    </appearance> 

    <appearance>
      <aspectname>Halt</aspectname>
      <show>red</show>
      <imagelink type="large">preference:resources/icons/CH-Hauptsignal_4_Halt.png</imagelink>      
      <imagelink type="aspects">preference:resources/icons/CH-Hauptsignal_4_Halt.png</imagelink>
    </appearance>

  </appearances>
  
